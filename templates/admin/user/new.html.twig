{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_new' %}

{% block main %}
    <h1>New User</h1>

    {{ form_start(form) }}
        {{ form_row(form.fullname) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Create User
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_user_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Back to User List
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
{% endblock %}
