{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_group_new' %}

{% block main %}
    <h1>New Group</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Create Group
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_group_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Back to Group List
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
{% endblock %}
